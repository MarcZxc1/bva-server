# ML Service - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================
# Application Configuration
# ============================================
APP_NAME="SmartShelf ML Service"
APP_VERSION="1.0.0"
DEBUG=false

# Server host and port
HOST=0.0.0.0
PORT=8001
WORKERS=4

# ============================================
# API Configuration
# ============================================
API_V1_PREFIX=/api/v1
MAX_PAYLOAD_ROWS=100000

# ============================================
# Redis Configuration
# ============================================
# Redis connection URL for caching and Celery
# Format: redis://[password]@[host]:[port]/[database]
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# ============================================
# Celery Configuration (for background tasks)
# ============================================
# Celery broker URL (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend (Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TIMEZONE=UTC

# ============================================
# Model Configuration
# ============================================
# Directory where ML models are stored
MODEL_DIR=./models

# Model cache duration (days)
MODEL_CACHE_DAYS=7

# Default forecast parameters
DEFAULT_FORECAST_PERIODS=14
DEFAULT_FORECAST_METHOD=auto
FORECAST_MIN_HISTORY_DAYS=14
FORECAST_CONFIDENCE_INTERVAL=0.95

# ============================================
# Inventory Thresholds
# ============================================
# Default thresholds (can be overridden per request)
DEFAULT_LOW_STOCK_THRESHOLD=10
DEFAULT_EXPIRY_WARNING_DAYS=7
DEFAULT_SLOW_MOVING_WINDOW_DAYS=30
DEFAULT_SLOW_MOVING_THRESHOLD=0.5

# ============================================
# Promotion Configuration
# ============================================
DEFAULT_MAX_DISCOUNT_PCT=40.0
DEFAULT_MIN_MARGIN_PCT=10.0
PROMOTION_ELASTICITY_MULTIPLIER=2.0

# ============================================
# Backend API Configuration (Optional)
# ============================================
# URL of the main BVA backend server
BACKEND_API_URL=http://localhost:3000

# API key for backend communication (if required)
BACKEND_API_KEY=your_backend_api_key_here

# ============================================
# Google Gemini API (for AI features)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
IMAGEN_MODEL=gemini-2.5-flash-image

# ============================================
# Social Media APIs (Optional)
# ============================================
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
