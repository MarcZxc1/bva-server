# .env.example
# Copy this to .env and configure for your environment

# Application
APP_NAME=SmartShelf ML Service
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Configuration
API_V1_PREFIX=/api/v1
MAX_PAYLOAD_ROWS=100000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TIMEZONE=UTC

# Model Configuration
MODEL_DIR=./models
MODEL_CACHE_DAYS=7
DEFAULT_FORECAST_PERIODS=14
DEFAULT_FORECAST_METHOD=auto

# Forecast Parameters
FORECAST_MIN_HISTORY_DAYS=14
FORECAST_CONFIDENCE_INTERVAL=0.95

# Inventory Thresholds
DEFAULT_LOW_STOCK_THRESHOLD=10
DEFAULT_EXPIRY_WARNING_DAYS=7
DEFAULT_SLOW_MOVING_WINDOW_DAYS=30
DEFAULT_SLOW_MOVING_THRESHOLD=0.5

# Promotion Generation
DEFAULT_MAX_DISCOUNT_PCT=40.0
DEFAULT_MIN_MARGIN_PCT=10.0
PROMOTION_ELASTICITY_MULTIPLIER=2.0

# Backend Callback (optional)
# BACKEND_API_URL=http://localhost:3000/api
# BACKEND_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
