# ML Service Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# Service Configuration
# ============================================
PORT=8001
HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json
API_V1_PREFIX=/api/v1

# ============================================
# Model Configuration
# ============================================
MODEL_DIR=/app/models
MODEL_CACHE_DAYS=7
DEFAULT_FORECAST_PERIODS=14
DEFAULT_FORECAST_METHOD=auto
FORECAST_MIN_HISTORY_DAYS=14
FORECAST_CONFIDENCE_INTERVAL=0.95

# ============================================
# Inventory Thresholds
# ============================================
DEFAULT_LOW_STOCK_THRESHOLD=10
DEFAULT_EXPIRY_WARNING_DAYS=7
DEFAULT_SLOW_MOVING_WINDOW_DAYS=30
DEFAULT_SLOW_MOVING_THRESHOLD=0.5

# ============================================
# Promotion Generation
# ============================================
DEFAULT_MAX_DISCOUNT_PCT=40.0
DEFAULT_MIN_MARGIN_PCT=10.0
PROMOTION_ELASTICITY_MULTIPLIER=2.0

# ============================================
# Google Gemini API (REQUIRED for AI features)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
IMAGEN_MODEL=gemini-2.5-flash-image

# ============================================
# Backend API (Optional - for callbacks)
# ============================================
BACKEND_API_URL=http://main-server:3000
BACKEND_API_KEY=

# ============================================
# Social Media APIs (Optional)
# ============================================
FACEBOOK_ACCESS_TOKEN=
INSTAGRAM_ACCESS_TOKEN=
