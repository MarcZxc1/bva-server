# Development Dockerfile for Shopee Auth Service
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies (npm install works with or without lock file)
RUN npm install

# Copy source code
COPY . .

EXPOSE 3002

CMD ["npx", "ts-node-dev", "--respawn", "--transpile-only", "index.ts"]

